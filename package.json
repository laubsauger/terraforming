{
  "name": "terraforming",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "predev": "pnpm --filter @terraforming/types build && pnpm --filter @terraforming/engine build",
    "dev": "concurrently -n \"types,engine,playground\" -c \"yellow,cyan,green\" \"pnpm --filter @terraforming/types build:watch\" \"pnpm --filter @terraforming/engine build:watch\" \"pnpm --filter @terraforming/playground dev\"",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "check": "pnpm run typecheck && pnpm run lint"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@webgpu/types": "^0.1.43",
    "concurrently": "^9.2.1",
    "typescript": "^5.4.2"
  }
}
